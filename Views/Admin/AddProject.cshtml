@using ProjectManagementApplication.Models;
@model Project;

@{
    Layout = "_LayoutLoginSignup";
}

<div class="signup-container">
    <div class="signup">
        <h1 class="text-center">Add Project</h1>
        <form method="post" action="AddProject">

            <div class="form-group">

                <label asp-for="Name"> Project Name </label>
                <input asp-for="Name" type="text" class="form-control">

                <label asp-for="Description"> Project Description  </label>
                <input asp-for="Description" type="text" class="form-control">

                <label asp-for="Cost"> Project Cost </label>
                <input asp-for="Cost" type="number" class="form-control">

                <label asp-for="CustomerId"> Customer Id </label>
                <input asp-for="CustomerId" type="number" class="form-control">
               
            </div>
            <div class="sub-btn">
                <button type="submit" class="btn btn-primary text-center">Add Project</button>
            </div>

        </form>
    </div>
</div>