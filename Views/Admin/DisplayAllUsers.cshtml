@model List<ProjectManagementApplication.Models.User>

<div>
    <h1 class="text-center">TOXA</h1>
</div>

<div>
    <h1 class="text-center">Admin Dashboard</h1>
</div>

<div class="app-container">
    <table class="table table-striped table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (User user in Model)
            {

                <tr>
                    <td>   @user.UserName       </td>
                    <td>   @user.UserEmail       </td>
                    <td>

                        <a class="btn btn-info" asp-action="UserDetails" asp-route-userid="@user.UserId">Details</a>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@user.UserId">Edit</a>
                        <a class="btn btn-danger" asp-action="Remove" asp-route-id="@user.UserId">Remove</a>
                    </td>
                </tr>

            }


        </tbody>
    </table>
</div>