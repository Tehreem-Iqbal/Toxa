<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
</head>
<body>
    @RenderSection("header",true)
    <!-- Seperator -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <hr>
            </div>
        </div>
    </div>
    <!-- Seperator ends -->
    <div class="container">
        <div class="row">

            @RenderSection("sidebar",true)
            @RenderBody()

        </div>
    </div>
    <footer class="border-top text-muted mt-auto">
        <div class="container">
            &copy; 2023 - ProjectManagementApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
