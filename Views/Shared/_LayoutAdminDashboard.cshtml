@{
    Layout = "_LayoutDashoard.cshtml";
    string activePage = ViewBag.activePage;
}
@section header {
    <header>
        <!-- Navigation bar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <!-- Padding -->
                <div class="col-md-1">
                    <img src="~/Images/Logo.png" alt="logo" class="rounded" width="70" height="70">
                </div>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Toxa</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                        aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                    </ul>

                </div>

                <!-- Padding -->
                <div class="col-md-1"></div>
                <!-- Padding ends -->

                @RenderSection("userinfo",true)
            
            </div>
        </nav>
        <!-- Navigation bar ends -->
    </header>
}

@section sidebar {
    <!-- Side bar -->
    <div class="col-md-2">
        <div class="list-group">
            <a asp-action="Index" class="list-group-item list-group-item-action">Dashboard</a>
            <a asp-action="DisplayAllProjects" class="list-group-item list-group-item-action">Projects</a>
            <a asp-action="DisplayAllServices" class="list-group-item list-group-item-action">Services</a>
            <a asp-action="DisplayAllUsers" class="list-group-item list-group-item-action">Users</a>
            <a asp-action="Logout" class="list-group-item list-group-item-action">Logout</a>
        </div>
    </div>
    <!-- Side bar ends -->
}
@RenderBody()